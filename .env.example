# KBI Labs Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate strong secrets using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here-change-me
JWT_SECRET=your-jwt-secret-key-here-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
POSTGRES_USER=kbi_user
POSTGRES_PASSWORD=your-secure-db-password-here
POSTGRES_DB=kbi_labs
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=kbi_labs
ZOOKEEPER_HOST=localhost
ZOOKEEPER_PORT=2181

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================
# SAM.gov API (Register at https://api.data.gov/signup/)
SAM_GOV_API_KEY=your-sam-gov-api-key-here

# USASpending API
USASPENDING_API_KEY=your-usaspending-api-key-here

# Census Bureau API (Register at https://api.census.gov/data/key_signup.html)
CENSUS_API_KEY=your-census-api-key-here

# FRED API (Register at https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=your-fred-api-key-here

# USPTO API
USPTO_API_KEY=your-uspto-api-key-here

# NSF API
NSF_API_KEY=your-nsf-api-key-here

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# Hunter.io API
HUNTER_API_KEY=your-hunter-api-key-here

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=25

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your-grafana-password-here

# =============================================================================
# CACHING
# =============================================================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' for development, 'false' for production
RELOAD_ON_CHANGE=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Uncomment and configure for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# WORKER_PROCESSES=4
# MAX_CONNECTIONS=1000
